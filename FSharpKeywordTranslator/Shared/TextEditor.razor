@using System.Reflection;


<input type="text" value="@Property.GetValue(Source)" @onchange="ValueChanged" class="form-control" />

@code {
    [Parameter]
    public PropertyInfo Property { get; set; } = null!;
    [Parameter]
    public object Source { get; set; } = null!;

    public void ValueChanged(ChangeEventArgs e)
    {
        Property.SetValue(Source, e.Value);
    }
}
